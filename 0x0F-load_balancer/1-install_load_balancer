#!/usr/bin/env bash
#Install and configure HAproxy on your lb-01 server
sudo apt-get -y update
sudo apt-get -y install --no-install-recommands software-properties-common
sudo add-apt-repository -y ppa:vbernat/haproxy-2.4
sudo apt-get -y install haproxy
sudo sed -i 's/ENABLED=0/ENABLED=1/' /etc/default/haproxy
sudo sed -i "$ a\listen 76065-lb-01\n\tbind *:80\n\tmode http\n\tbalance roundrobin\n\toption httpclose\n\toption forwardfor\n\tserver 76065-web-01 34.202.158.152 check\n\tserver 76065-web-02 check" /etc/haproxy/haproxy.cfg
sudo service haproxy restart
