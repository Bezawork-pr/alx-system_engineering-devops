#!/usr/bin/env bash
#Install and configure HAproxy on your lb-01 server
apt-get update
apt-get -y install --no-install-recommands software-properties-common
add-apt-repository -y ppa:vbernat/haproxy-2.4
apt-get -y install haproxy
printf "
frontend http
	bind *:80
	mode http
	default_backend web_backend

backend web_backend
	balance roundrobin
	server web-01 34.202.158.152 check
	server web-02 100.25.34.22 check
" >> /etc/haproxy/haproxy.cfg
service haproxy restart
